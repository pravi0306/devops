pipeline {
    agent any
  stages {
    stage('git checkout') {
        steps {
    git branch: 'main', url: 'https://github.com/pravi0306/devops.git'
        }
}
  stage('terraform init') {
    steps {
    dir('devops') {
        sh 'terraform init'
    }
    }
  }
  stage('terraform plan') {
    steps {
    dir('devops') {
        sh 'terraform plan -input=false'
    }
    }
  }
   stage('terraform action') {
    steps {
        sh 'terraform ${action} --auto-approve'
    }
  }
  }    
}